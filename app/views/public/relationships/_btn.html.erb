<div id="follow_btn_<%= user.id %>">
  <% if current_user.following?(user) %>
    <%= link_to 'フォローを外す', user_relationships_path(user.id), method: :DELETE, remote: true, class: 'unfollow-button' %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, remote: true, class: 'edit-button' %>
  <% end %>
</div>
