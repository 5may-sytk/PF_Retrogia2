<div class="container">
	<div class="row views">

    <div class="col-2 sidebar"> 
      <!-- サイドバー -->  
      <%= render 'public/posts/sidebar' %> 
    </div>

    <div class="col-9 searched-content"> 
      <!-- 検索結果画面 -->
      <h2 class = "title"> Results Search</h2> 
      <div class="row ">
        <table class="table table-hover table-inverse">
          <% if @range == "ユーザー" %>
            <tbody>
              <% @users.each do |user| %>
                <tr class="results">
                  <td></td>
                  <td>
                    <% if user.user_image.attached? %>
                      <%= link_to public_user_path(user.id), class: 'post-user' do %>
                        <%= image_tag url_for(user.user_image), size: "150x125" %>
                      <% end %>
                    <% else %>
                      <%= link_to public_user_path(user.id), class: 'post-user' do %>
                        <%= image_tag 'icon/camera.logo2.png', size: "150x125" %>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to public_user_path(user.id), class: 'post-user' do %>
                      <%= user.name %></td>
                    <% end %>
                </tr>
              <% end %>
            </tbody>
          <% else %>
            <tbody>
              <% @posts.each do |post| %>
                <tr class="results">
                  <td>
                    <% if post.post_image.attached? %>
                      <%= link_to post_path(post), class: 's-post-image' do %>
                        <%= image_tag url_for(post.post_image), size: "150x125" %>
                      <% end %>
                    <% else %>
                      <%= link_to post_path(post), class: 's-post-image' do %>
                        <%= image_tag 'noimage.png', size: "150x125" %>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to post_path(post), class: 's-post-title' do %>
                      <%= post.title %>
                    <% end %>
                  </td>
                  <td>
                    <span class="post-tags">
                      <% post.tags.each do |tag| %>
                        <%= tag.image_tags %>
                      <% end %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>