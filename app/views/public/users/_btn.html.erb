<% if allow %>   
  <%= link_to edit_public_user_path(user), class: 'edit-button' do %>
    <%= "User Edit" %>
  <% end %>
<% else %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォローを外す', public_user_relationships_path(user.id), method: :DELETE, class: 'edit-button' %>
  <% else %>
    <%= link_to 'フォローする', public_user_relationships_path(user.id), method: :POST, class: 'edit-button' %>
  <% end %>
<% end %>