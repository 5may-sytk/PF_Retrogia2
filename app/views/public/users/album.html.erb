<div class="container">
  <div class="row views">
  
    <div class="col-2 sidebar">
      <!-- サイドバー --> 
      <%= render 'public/posts/sidebar' %>
    </div>

    <div class="col-10 album-index"> 
      <h2 class = "title">Album</h2> <br>

        <div class="user-album-grid">
          <% @posts.each do |post| %>
            <div class="album-item">
            <% if post.post_image.attached? %>
              <%= link_to post_path(post.id), class: 'side-nav-item' do %>
                <%= image_tag url_for(post.post_image), size: "150x100" %>
              <% end %>
            <% else %>
              <%= link_to post_path(post.id), class: 'side-nav-item' do %>
                <%= image_tag 'noimage.png', size: "150x100" %>
              <% end %>
            <% end %>
            </div>
          <% end %>
        </div>
      <br>
      <br>
      <div class="row back-btn-area">
        <%= render 'public/posts/1back' %>
      </div>
      <%= paginate @posts %>

      <span id="back">
        <a class="back-link" href="#" data-no-turbolink>
        <i class="fa-solid fa-angle-up fa-xl " ></i>
        </a>
      </span>
    </div>
  </div>
</div>