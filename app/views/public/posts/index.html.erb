<div class="container">
	<div class="row views">

    <div class="col-2 sidebar d-flex flex-column"> 
      <!-- サイドバー -->  
      <%= render 'sidebar' %>
    </div>

    <div class="col-9 main-content"> 
    <!--メイン-->
      <br>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      
      <div class="row searcher-area">
      <% if user_signed_in? %>
        <%= render 'public/searches/search', url_path:public_search_path %>
      <% end %>
      </div>
      <br>

      <div class="posts">
        <table class='table table-hover'>
          <tbody>
            <% @posts.each do |post| %>
              <%= render partial: 'posts', locals: { post: post } %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="pager-area">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
