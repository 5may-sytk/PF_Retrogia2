<% if post.favorited_by?(current_user) %>
  <%= link_to public_post_favorite_path(@post), method: :delete, class: 'btn post-link' do %>
    <i class="fa-solid fa-heart fa-xl" aria-hidden="true" style="color: #b33e5c;"></i>
    <%= post.favorites.count %> 
  <% end %>
<% else %>
  <%= link_to public_post_favorites_path(post), method: :post, class: 'btn post-link' do %>
    <i class="fa-regular fa-heart fa-xl" aria-hidden="true"></i>
    <%= post.favorites.count %> 
  <% end %>
<% end %>