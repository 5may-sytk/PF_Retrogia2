<div class="container">
  <div class="row views">

    <div class="col-2 sidebar">
      <!-- サイドバー --> 
      <%= render 'public/posts/sidebar' %>
    </div>

    <div class="col-10 favorite-index"> 
      <h2 class = "title"> Favorite</h2> 

      <table class = "table">
        <% @my_favorite_posts.each do |post| %>
          <tbody>
            <%= render partial: 'public/posts/posts', locals: { post: post } %>
          </tbody>
        <% end %>
      </table>

      <span id="back">
        <a class="back-link" href="#">
        <i class="fa-solid fa-angle-up fa-xl " ></i>
        </a>
      </span>
    </div>
  </div>
</div>