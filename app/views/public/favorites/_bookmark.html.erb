<% if post.bookmarked_by?(current_user) %>
  <%= link_to public_post_bookmark_path(post), method: :delete, class: 'btn post-link' do %>
    <i class="fa-solid fa-bookmark fa-xl" aria-hidden="true"></i> 
  <% end %>
<% else %>
  <%= link_to public_post_bookmarks_path(post), method: :post, class: 'btn post-link' do %>
    <i class="fa-regular fa-bookmark fa-xl" aria-hidden="true"></i>
  <% end %>
<% end %>